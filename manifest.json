{
    "manifest_version": 3,
    "name": "Route Plotter with Vehicle Info",
    "version": "1.1",
    "description": "Fetches journey and vehicle details, queries ChatGPT, and plots it on Google Maps.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }